.userinfo {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 40vh;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 10px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
  margin-bottom: 10px;
}

.show-container {
  flex-direction: column-reverse;
}

#bg-img {
  position: absolute; z-index: -1; opacity: 0.5; width: 100%; height: 100%;
  top: 0;
  bottom: 0;
}

