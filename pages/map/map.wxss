.color-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(1) {
	color: #3875FF;
}
.color-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(2) {
	color: #00C562;
}
.color-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(3) {
	color: #F74A14;
}

.bordercolor-icon {
	margin-right: 5px;
	width: 16px;
	height: 16px;
}

.bordercolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(1) {
	background: url(https://3gimg.qq.com/lightmap/xcx/demoCenter/images/iconLinecolorBlue@3x.png) center center no-repeat;
	background-size: 20px 20px;
}
.bordercolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(2) {
	background: url(https://3gimg.qq.com/lightmap/xcx/demoCenter/images/iconLinecolorGreen@3x.png) center center no-repeat;
	background-size: 20px 20px;
}
.bordercolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(3) {
	background: url(https://3gimg.qq.com/lightmap/xcx/demoCenter/images/iconLinecolorRed@3x.png) center center no-repeat;
	background-size: 20px 20px;
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell {
	position: relative;
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell::after {
	content: '';
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width:36px;
	height:20px;
	border-radius:2px;
	box-sizing: border-box;
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(1) {
	color: #fff;
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(1)::after {
	background:rgba(56,117,255,1);
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(2) {
	color: #fff;
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(2)::after {
	background:rgba(0,197,98,1);
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(3) {
	color: #fff;
}
.bgcolor-actionsheet .weui-actionsheet__menu .weui-actionsheet__cell:nth-child(3)::after {
	border:1px solid rgba(221,221,221,1);
}




