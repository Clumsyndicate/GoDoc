.map-content {
	margin-top: 10px;
  display:none;
  z-index: 1;
  width: 100%;
  opacity: 0;
  height: 100%;
  box-sizing: border-box;
}

.map-content-show {
  display: flex;
  flex-direction: column;
  opacity: 1;
  z-index: 2;
  transition: 0.3s;
}

.map-panel {
  background: #fff;
  padding: 0 1rem 1rem 1rem;
	height: 70%;
}
